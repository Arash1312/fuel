import requests
import json

class SmartGasValve:
    def __init__(self, api_url, api_key):
        self.api_url = api_url
        self.api_key = api_key

    def turn_off(self):
        headers = {"Authorization": f"Bearer {self.api_key}"}
        try:
            response = requests.post(self.api_url, headers=headers, timeout=5)
            if response.status_code == 200:
                print("Smart valve turned OFF safely.")
            else:
                print(f"Error: {response.status_code} - {response.text}")
        except Exception as e:
            print("Connection failed:", e)
import schedule
import time
import json
from smart_gas_api import SmartGasValve

def load_config():
    with open("config.json", "r") as f:
        return json.load(f)

def main():
    cfg = load_config()

    valve = SmartGasValve(
        api_url=cfg["device_api"],
        api_key=cfg["api_key"]
    )

    # schedule the shutdown time
    schedule.every().day.at(cfg["off_time"]).do(valve.turn_off)
    print(f"Scheduled gas valve OFF at {cfg['off_time']}")

    while True:
        schedule.run_pending()
        time.sleep(1)

if __name__ == "__main__":
    main()
